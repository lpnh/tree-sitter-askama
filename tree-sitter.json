{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "askama",
      "camelcase": "Askama",
      "title": "Askama",
      "scope": "source.askama",
      "file-types": [
        "html"
      ],
      "injection-regex": "^askama$",
      "class-name": "TreeSitterAskama"
    }
  ],
  "metadata": {
    "version": "0.1.0",
    "license": "Unlicense",
    "description": "Askama grammar for tree-sitter",
    "authors": [
      {
        "name": "lpnh",
        "email": "paniguel.lpnh@gmail.com"
      }
    ],
    "links": {
      "repository": "https://github.com/lpnh/tree-sitter-askama.git"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  }
}